<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="~/Scripts/jsFile.js"></script>
    <title>Evidencija pacijenata</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" role="navigation">
        <div class="container">
            <a class="navbar-brand" href="~/Home/Index">Evidencija pacijenata</a>
            <button class="navbar-toggler border-0" type="button" data-toggle="collapse" data-target="#exCollapsingNavbar">
                &#9776;
            </button>
            <div class="collapse navbar-collapse" id="exCollapsingNavbar">
                <ul class="nav navbar-nav">
                    <li class="nav-item"><a href="#" class="nav-link">Početna</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Ustanove</a></li>
                    <li class="nav-item"><a href="@Url.Action("Index", "Vestis")" class="nav-link">Vesti</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">O nama</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Kontakt</a></li>
                </ul>
                @if (Session["IDPacijenta"] == null && Session["IDLekara"] == null)
                {
                    <ul class="nav navbar-nav flex-row justify-content-between ml-auto">
                        <li class="dropdown order-1">
                            <button type="button" id="dropdownMenu1" data-toggle="dropdown" class="btn btn-outline-secondary dropdown-toggle">Login <span class="caret"></span></button>
                            <ul class="dropdown-menu dropdown-menu-right mt-2">
                                <li class="px-3 py-2">
                                    <form action="~/Home/PacijentLogin" method="post" name="forma" class="form" role="form">
                                        <div class="form-group">
                                            <input placeholder="Broj zdravstvene knjižice" class="form-control form-control-sm" name="KorisnickoIme" type="text" required="">
                                        </div>
                                        <div class="form-group">
                                            <input placeholder="Lozinka" class="form-control form-control-sm" name="Lozinka" type="text" required="">
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-primary btn-block" value="Login" onclick="return proveriLogin();" />
                                        </div>
                                        <div class="form-group text-center">
                                            <small><a href="~/ResetPassword">Zaboravili ste lozinku?</a></small>
                                        </div>
                                        <div class="form-group text-center">
                                            <small><a href='@Url.Action("Create", "Pacijents")'>Niste se još registrovali?</a></small>
                                        </div>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                }
                else if (Session["IDPacijenta"] != null && Session["IDLekara"] == null)
                {
                    <ul class="nav navbar-nav">
                        <li class="nav-item"><a href="@Url.Action("Create", "ZakazivanjePregledas")" class="nav-link">Zakaži pregled</a></li>
                        <li class="nav-item"><a href="@Url.Action("Details", "Kartons", new { id = Session["IDPacijenta"] })" class="nav-link">Moj Karton</a></li>
                        <li class="nav-item"><a href="@Url.Action("Details", "Pacijents", new { id = Session["IDPacijenta"] })" class="nav-link">@Session["ImePrezime"]</a></li>
                        <li class="nav-item"><a href="@Url.Action("Logout", "Home")" class="nav-link">(Odjavi se)</a></li>
                    </ul>
                }
                else if (Session["IDPacijenta"] == null && Session["IDLekara"] != null)
                {
                    <ul class="nav navbar-nav">

                        <li class="nav-item"><a href="@Url.Action("Pretraga", "Pacijents")" class="nav-link">Pretraga pacijenata</a></li>
                        @if (Session["Specijalizacija"] != null)
                        {
                            <li class="nav-item"><a href="@Url.Action("Index", "Uputs", new { id = Session["IDLekara"] })" class="nav-link">Pristigli uputi</a></li>
                            <li class="nav-item"><a href="@Url.Action("Details", "LekarSpecijalistas", new { id = Session["IDLekara"] })" class="nav-link">@Session["ImePrezime"]</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a href="@Url.Action("Index", "ZakazivanjePregledas", new { id = Session["IDLekara"] })" class="nav-link">Zakazani pregledi</a></li>
                            <li class="nav-item"><a href="@Url.Action("Details", "LekarOpstePrakses", new { id = Session["IDLekara"] })" class="nav-link">@Session["ImePrezime"]</a></li>
                        }
                        <li class="nav-item"><a href="@Url.Action("Logout", "Home")" class="nav-link">(Odjavi se)</a></li>
                    </ul>
                }
            </div>
        </div>
    </nav>
    <div id="modalPassword" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Forgot password</h3>
                    <button type="button" class="close font-weight-light" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                <div class="modal-body">
                    <p>Reset your password..</p>
                </div>
                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                    <button class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid mt-5 pt-5">
        <div class="row">
            <div class="col-2 text-center">
                @if (Session["IDPacijenta"] == null && Session["IDLekara"] == null)
                {
                    <h3>Lekarski servis</h3>
                    <div class="card text-right">
                        <div class="card-body">
                            <form action="~/Home/LekarLogin" method="post" name="forma2">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="KorisnickoIme" placeholder="Korisničko ime">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" name="Lozinka" placeholder="Lozinka">
                                </div>
                                <button type="submit" id="sendlogin" class="btn btn-primary" onclick="return proveriLogin();">Login</button>
                            </form>
                        </div>
                    </div>
                }
            </div>

            <div class="col-8">
                @RenderBody()
            </div>
            <div class="col-2">
                @RenderSection("Obavestenja", required: false)
            </div>
        </div>
    </div>

</body>
</html>
