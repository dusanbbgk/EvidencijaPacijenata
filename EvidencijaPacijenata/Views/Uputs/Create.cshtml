<script language="javascript" type="text/javascript">
    function PrikaziOdeljenja(IDUstanove) {
        var procemessage = "<option value='0'> Please wait...</option>";
        $("#OdeljenjaSelect").html(procemessage).show();
        var url = "/Uputs/Odeljenja/";
        $.ajax({
            url: url,
            data: { IDUstanove: IDUstanove },
            cache: false,
            type: "POST",
            success: function (data) {
                var markup = "<option value='0'>Izaberite odeljenje</option>";
                for (var x = 0; x < data.length; x++) {
                    markup += "<option value=" + data[x].Value + ">" + data[x].Text + "</option>";
                }
                $("#OdeljenjaSelect").html(markup).show();
            },
            fail: function (reponse) {
                alert("error : " + reponse);
            }
        });

    }
</script>

