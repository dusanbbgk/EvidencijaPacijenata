@model IEnumerable<EvidencijaPacijenata.Models.LekarOpstePrakse>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Lista lekara opšte prakse</h2>

@if (Session["IDAdmina"] != null)
{
    <p>
        @Html.ActionLink("Dodaj novog lekara opšte prakse", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Odeljenje.Ustanova.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Odeljenje.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Licenca)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Odeljenje.Ustanova.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Odeljenje.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Licenca)
            </td>
            <td>
                @Html.ActionLink("Detalji", "Details", new { id = item.ID })
                @if (Session["IDAdmina"] != null)
                {
                    <text> | </text>@Html.ActionLink("Edit", "Edit", new { id = item.ID })<text> | </text>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                }
            </td>
        </tr>
    }

</table>
