@model IEnumerable<EvidencijaPacijenata.Models.Uput>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DatumPregleda)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZavrsenPregled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Korisnik.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Korisnik1.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Odeljenje.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Korisnik2.Ime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DatumPregleda)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ZavrsenPregled)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Korisnik.Ime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Korisnik1.Ime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Odeljenje.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Korisnik2.Ime)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
            <a href="@Url.Action("Create", "Izvestajs", new { id = item.IDPacijenta })">Napiši izveštaj</a> |
            <a href="@Url.Action("Create", "Uputs", new { id = item.IDPacijenta })">Napiši uput</a> |
            <a href="@Url.Action("Edit", "Kartons", new { id = item.IDPacijenta })">Karton Pacijenta</a> |
            <a href="@Url.Action("ZadrziNaOdeljenju", "Pacijents", new { id = item.IDPacijenta })">Zadrži pacijenta na odeljenju</a>
        </td>
    </tr>
}

</table>
