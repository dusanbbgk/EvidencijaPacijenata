@model IEnumerable<EvidencijaPacijenata.Models.Ustanova>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<link href="~/Content/VestiCSS.css" rel="stylesheet" />
<h1>Zdravstvene ustanove</h1>
<hr />
@if (Session["IDAdmina"] != null)
{
    <p>
        @Html.ActionLink("Dodaj novu ustanovu", "Create")
    </p>
}
<section class="details-card">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="card col-md-4 mb-2" style="width: 18rem;">
                    @if (item.Slika == "Default.jpg")
                    {
                        <img class="card-img-top" src="~/Imgs/Ustanove/Default.jpg" style="height: 200px;" alt="@item.Naziv">
                    }
                    else
                    {
                        <img class="card-img-top" src="~/Imgs/Ustanove/@item.ID.ToString()/@item.Slika" style="height: 200px;" alt="@item.Naziv">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.Naziv</h5>
                        @*<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>*@
                        <a href="@Url.Action("Details", "Ustanovas", new { id = item.ID })" class="btn btn-primary">Detalji</a>

                        @if (Session["IDAdmina"] != null)
                        {
                            <a href="@Url.Action("Edit", "Ustanovas", new { id = item.ID })" class="btn btn-primary">Edit</a>
                            <a href="@Url.Action("Delete", "Ustanovas", new { id = item.ID })" class="btn btn-primary">Obriši</a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</section>
