<script language="javascript" type="text/javascript">
    function PrikaziTermine(IDLekara) {
        var procemessage = "<option value='0'> Please wait...</option>";
        $("#divTermini").html(procemessage).show();
        var url = "/ZakazivanjePregledas/Termini/";
        $.ajax({
            url: url,
            data: { IDLekara: IDLekara },
            cache: false,
            type: "POST",
            success: function (data) {
                var markup = "<option value='0'>Izaberite termin</option>";
                for (var x = 0; x < data.length; x++) {
                    markup += "<option value=" + data[x].Text + ">" + data[x].Text + "</option>";
                }
                $("#divTermini").html(markup).show();
            },
            fail: function (reponse) {
                alert("error : " + reponse);
            }
        });

    }
</script>

