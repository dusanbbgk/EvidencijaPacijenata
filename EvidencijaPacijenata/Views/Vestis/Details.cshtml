@model EvidencijaPacijenata.Models.Vesti

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>@Model.Naslov</h2>
<hr />
<p>
    @Html.ActionLink("<-- Nazad na sve vesti", "Index")
    @if (Session["IDAdmina"] != null)
    {
        <text> | </text>@Html.ActionLink("Izmeni", "Edit", new { id = Model.ID })<text> | </text>
        @Html.ActionLink("Obriši", "Delete", new { id = Model.ID })
    }

</p>
<p class="text-secondary">Objavljeno: @Model.DatumObjave.ToShortDateString()</p>
<div class="row">
    <div class="col-md-6">
        <p style="font-size: 20px;">@Model.Tekst</p>
    </div>
    <div class="col-md-6">
        @if (Model.Slika != "Default.jpg")
        {
            <img class="img-thumbnail" src="~/Imgs/Vesti/@Model.ID.ToString()/@Model.Slika" alt="@Model.Naslov" />
        }
        else
        {
            <img class="img-thumbnail" src="~/Imgs/Vesti/@Model.Slika" alt="@Model.Naslov" />
        }
    </div>
</div>
