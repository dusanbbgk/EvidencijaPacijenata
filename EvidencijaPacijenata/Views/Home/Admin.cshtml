
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Admin Login</h2>
<hr />
<div class="row justify-content-md-center">
    <div class="col-md-4 text-center">
        <form action="/Home/AdminLogin" method="post" name="forma">
            <div class="form-group">
                <input type="text" class="form-control" name="KorisnickoIme" placeholder="Korisničko ime" required="">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="Lozinka" placeholder="Lozinka" required="">
            </div>
            <div class="form-group text-right">
                <button type="submit" id="sendlogin" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
</div>