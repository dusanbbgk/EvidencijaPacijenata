@model EvidencijaPacijenata.Models.ZakazivanjePregleda

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@section Obavestenja
    {
    @ViewBag.PostojiZakazanPregled
}
<h2>Detalji o zakazanom pregledu</h2>
<hr />
<p>
    <b>
        Pacijent:
    </b>
    <a href="@Url.Action("Details", "Pacijents", new { id = Model.IDPacijenta})">@Model.Korisnik1.ImePrezime</a>
</p>
<p>
    <b>
        Lekar:
    </b>
    <a href="@Url.Action("Details", "LekarOpstePrakses", new { id = Model.IDLekara})">@Model.Korisnik.ImePrezime</a>
</p>
<p>
    <b>
        Datum i vreme pregleda:
    </b>
    @Model.DatumPregleda.ToShortDateString() u @Model.VremePregleda
</p>
<p>
    <b>
        Datum zakazivanja pregleda:
    </b>
    @Model.DatumZakazivanja.ToShortDateString()
</p>
<p>
    <b>
        Ustanova:
    </b>
    <a href="@Url.Action("Details", "Ustanovas", new { id = ViewBag.Ustanova})">@ViewBag.Ustanova</a>
</p>
<p>
    <b>
        Odeljenje:
    </b>
    <a href="@Url.Action("Details", "Odeljenjes", new { id = ViewBag.Odeljenje})">@ViewBag.Odeljenje</a>
</p>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID })
    @if (Session["IDAdmina"] != null)
    {
        <text> | </text>
        @Html.ActionLink("Back to List", "Index")
    }
</p>
